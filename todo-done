#!/bin/sh

FILE=~/documenti/utili/todo-list.txt

todo-list
printf '\n'
read LINEA

if [ "$LINEA" = "1" ];then
    sed -i '1d' $FILE
elif [ "$LINEA" = "2" ];then
    sed -i '2d' $FILE
elif [ "$LINEA" = "3" ];then
    sed -i '3d' $FILE
elif [ "$LINEA" = "4" ];then
    sed -i '4d' $FILE
elif [ "$LINEA" = "5" ];then
    sed -i '5d' $FILE
elif [ "$LINEA" = "6" ];then
    sed -i '6d' $FILE
elif [ "$LINEA" = "7" ];then
    sed -i '7d' $FILE
elif [ "$LINEA" = "8" ];then
    sed -i '8d' $FILE
elif [ "$LINEA" = "9" ];then
    sed -i '9d' $FILE
elif [ "$LINEA" = "10" ];then
    sed -i '10d' $FILE
fi
